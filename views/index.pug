extends layout

block content
  .container-xxl
  h1.text-center= title
  p.text-center Welcome to #{title}
  .d-flex.gap-4.flex-wrap
    each val in items
      .card.card-width.rounded-3
        a(href=val.url)
          img.card-img-top(src="/images/medical_equipment_61dcd9d58f.jpg")
        .card-body 
          .card-title= val.name
          .card-text= val.description
          .d-flex.align-items-center.justify-content-between
            .card-text Price: !{val.price}
            a.btn.btn-primary Add to cart
    else 
      p There are no items in inventory. Stock now!
    