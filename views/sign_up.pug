extends layout 
block content 
    h3.text-center Sign-up here
    form(action="", method="post") 
        .form-floating
            input.form-control#floatingFname(name="fname")
            label(for='floatingFname') First Name
        .form-floating
            input.form-control#floatinglname(name="lname")
            label(for='floatingLname') Last Name
        .form-floating
            input.form-control#floatingEmail(name="email")
            label(for='floatingEmail') Email
        .form-floating
            input.form-control#floatingPassword(type="password" name="password")
            label(for='floatingPassword') Password
        button.btn.btn-primary submit
    .d-flex.gap-3
        a(href="./log-in") Already have an account
        //- a(href="./sign-up") Sign-up